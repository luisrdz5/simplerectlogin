@import '../variables.styl'

.login-container
  display flex
  justify-content center
  align-items center
  height $height-full
  background-color $background-color

.login-box
  background-color #fff
  padding $spacing-large
  border-radius $border-radius
  box-shadow $box-shadow
  width $full-width
  max-width $max-width-container
  text-align center

  @media (max-width: $breakpoint-mobile)
    padding $spacing-mobile-large

  @media (min-width: $breakpoint-tablet) and (max-width: $breakpoint-desktop)
    padding $spacing-tablet-large

h2
  margin-bottom $spacing-medium
  font-size $font-size-large
  color $text-color

  @media (max-width: $breakpoint-mobile)
    font-size $font-size-mobile-large

  @media (min-width: $breakpoint-tablet) and (max-width: $breakpoint-desktop)
    font-size $font-size-tablet-large

.subtitle
  margin-bottom $spacing-large
  font-size $font-size-small
  color $text-muted-color

.input-group
  margin-bottom $spacing-medium

  @media (max-width: $breakpoint-mobile)
    margin-bottom $spacing-mobile-medium

  @media (min-width: $breakpoint-tablet) and (max-width: $breakpoint-desktop)
    margin-bottom $spacing-tablet-medium

label
  display block
  margin-bottom $spacing-small
  font-weight bold
  color $text-color

  @media (max-width: $breakpoint-mobile)
    margin-bottom $spacing-mobile-small

  @media (min-width: $breakpoint-tablet) and (max-width: $breakpoint-desktop)
    margin-bottom $spacing-tablet-small

input
  width $full-width
  padding $spacing-small
  border 1px solid $border-color
  border-radius $border-radius
  font-size $font-size-base
  color $text-color
  &:focus
    outline none
    border-color $primary-color

  @media (max-width: $breakpoint-mobile)
    padding $spacing-mobile-small
    font-size $font-size-mobile-base

  @media (min-width: $breakpoint-tablet) and (max-width: $breakpoint-desktop)
    padding $spacing-tablet-small
    font-size $font-size-tablet-base

.links
  display flex
  justify-content center
  align-items center
  margin $spacing-medium 0
  font-size $font-size-small
  color $primary-color

  .separator
    margin 0 $spacing-small
    color $text-muted-color

  a
    color $primary-color
    text-decoration none
    &:hover
      text-decoration underline

.login-button
  width $full-width
  padding $spacing-small
  background-color $primary-color
  color #fff
  border none
  border-radius $border-radius
  font-size $font-size-base
  cursor pointer
  &:hover
    background-color $primary-hover-color

  @media (max-width: $breakpoint-mobile)
    padding $spacing-mobile-small
    font-size $font-size-mobile-base

  @media (min-width: $breakpoint-tablet) and (max-width: $breakpoint-desktop)
    padding $spacing-tablet-small
    font-size $font-size-tablet-base

.divider
  margin $spacing-large 0
  font-size $font-size-small
  color $text-muted-color

  @media (max-width: $breakpoint-mobile)
    margin $spacing-mobile-large 0
    font-size $font-size-mobile-small

  @media (min-width: $breakpoint-tablet) and (max-width: $breakpoint-desktop)
    margin $spacing-tablet-large 0
    font-size $font-size-tablet-small

.social-login
  display flex
  flex-direction column
  gap $spacing-small

button
  width $full-width
  padding $spacing-small
  border none
  border-radius $border-radius
  font-size $font-size-base
  cursor pointer
  display flex
  justify-content center
  align-items center
  gap $spacing-small

.facebook-button
  background-color $facebook-color
  color #fff
  &:hover
    background-color $facebook-hover-color

.google-button
  background-color $google-color
  color #fff
  &:hover
    background-color $google-hover-color

.apple-button
  background-color $apple-color
  color #fff
  &:hover
    background-color $apple-hover-color
