// Colores
$primary-color = #007bff
$primary-hover-color = #0056b3
$secondary-color = #6c757d
$background-color = #f4f4f4
$text-color = #333
$text-muted-color = #888
$border-color = #ccc
$error-color = #dc3545
$success-color = #28a745
$facebook-color = #3b5998
$facebook-hover-color = #2d4373
$google-color = #db4437
$google-hover-color = #a33324
$apple-color = #000
$apple-hover-color = #333

// Espaciado
$spacing-small = 0.5rem
$spacing-medium = 1rem
$spacing-large = 1.5rem

// Bordes
$border-radius = 4px
$box-shadow = 0 0 10px rgba(0, 0, 0, 0.1)

// Fuentes
$font-family = 'Arial', sans-serif
$font-size-base = 1rem
$font-size-large = 1.5rem
$font-size-small = 0.875rem

// Tamaños (Inputs, Botones)
$input-height = 2.5rem
$button-height = 2.5rem

// Layout
$max-width-container = 400px
$full-width = 100%
$height-full = 100vh

// Breakpoints (Tamaños de pantalla)
$breakpoint-mobile = 576px
$breakpoint-tablet = 768px
$breakpoint-desktop = 992px
$breakpoint-large-desktop = 1200px

// Tamaños de fuentes y espaciado por dispositivo
// Mobile
$font-size-mobile-base = 0.875rem
$font-size-mobile-large = 1.25rem
$spacing-mobile-small = 0.4rem
$spacing-mobile-medium = 0.8rem
$spacing-mobile-large = 1.2rem

// Tablet
$font-size-tablet-base = 1rem
$font-size-tablet-large = 1.375rem
$spacing-tablet-small = 0.5rem
$spacing-tablet-medium = 1rem
$spacing-tablet-large = 1.5rem

// Desktop
$font-size-desktop-base = 1rem
$font-size-desktop-large = 1.5rem
$spacing-desktop-small = 0.5rem
$spacing-desktop-medium = 1rem
$spacing-desktop-large = 1.5rem

// Large Desktop
$font-size-large-desktop-base = 1.125rem
$font-size-large-desktop-large = 1.75rem
$spacing-large-desktop-small = 0.6rem
$spacing-large-desktop-medium = 1.2rem
$spacing-large-desktop-large = 1.8rem
